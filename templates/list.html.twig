{% extends 'base.html.twig' %}
{% block stylesheets %}
	<style>
		.align-center {
			margin: 0 auto;
		}
	</style>
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-lg-6 align-center" style="background-color:#c8e6c9">
			<h1 class="text-center">Blogs</h1>

			<div class="row">
				<div class="d-flex flex-row-reverse bd-highlight mb-1">
					<a href="{{ path('app_main_createblog') }}" class="btn btn-primary">Create blog</a>
				</div>
			</div>

			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="flash-{{ label }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}

			{% for blog in blogs %}
				{% if(asset("image/"~blog.image)) != null %}

					<div class="card mb-2 p-1" style="max-width: 1000px;">
						<div class="row g-0">
							<div class="col-md-4">
								<img class="me-auto p-2 bd-highlight" src="{{asset("image/"~blog.image)}}" style="height:300px; width:320px"/>
							</div>

							<div class="col-md-8 mb-2">
								<div class="card-body">

									<div class="fs-3 fw-bold card-title">
										{{ blog.title }}
									</div>
									<p class="card-text">{{ blog.shortDescription }}</p>
								</div>
							</div>
							<div class="col-auto ms-auto p-2">
								<a href="{{ path('app_main_editblog', {id: blog.id}) }}" class="btn btn-primary">Edit</a>
								<a href="{{ path('app_blog_delete', {id: blog.id}) }}" onclick="return confirm('Sei sicuro?');" class="btn btn-danger">DELETE</a>
								<a href="{{ path('app_blog_read', {id: blog.id}) }}" class="btn btn-success">Read</a>
							</div>
						</div>
					</div>

				{% endif %}
			{% endfor %}

		</div>
	</div>

{% endblock %}
